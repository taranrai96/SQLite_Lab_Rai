<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="ca.bcit.lab.sqlite_lab_rai.MainActivity">

    <!--EVENT MASTER HEADINGS-->
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:stretchColumns="0,1,2"
        android:gravity="center" >

        <TextView
            android:text="@string/event_master_title1"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:layout_marginRight="@dimen/table_marginRight"/>

        <TextView
            android:text="@string/event_master_title2"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_column="1"
            android:layout_marginRight="@dimen/table_marginRight"/>

        <TextView
            android:text="@string/event_master_title3"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_column="2"
            android:layout_marginRight="@dimen/table_marginRight"/>
    </TableRow>

    <!--  EVENT MASTER ROW 1  -->

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:stretchColumns="0,1,2"
        android:gravity="center" >


        <TextView
            android:id="@+id/event1_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:textStyle="bold"
            android:layout_marginRight="@dimen/table_marginRight"/>

        <TextView
            android:id="@+id/event1_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_column="1"
            android:textStyle="bold"
            android:layout_marginRight="@dimen/table_marginRight"/>

        <TextView
            android:id="@+id/event1_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_column="2"
            android:textStyle="bold"
            android:layout_marginRight="@dimen/table_marginRight"/>

    </TableRow>

<!--  EVENT MASTER ROW 2  -->
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:stretchColumns="0,1,2"
        android:gravity="center" >

        <TextView
            android:id="@+id/event2_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:textStyle="bold"
            android:layout_marginRight="@dimen/table_marginRight"/>

        <TextView
            android:id="@+id/event2_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_column="1"
            android:textStyle="bold"
            android:layout_marginRight="@dimen/table_marginRight"/>

        <TextView
            android:id="@+id/event2_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_column="2"
            android:textStyle="bold"
            android:layout_marginRight="@dimen/table_marginRight"/>
    </TableRow>

    <!--  EVENT MASTER ROW 3  -->

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:stretchColumns="0,1,2"
        android:gravity="center" >


        <TextView
            android:id="@+id/event3_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_column="0"
            android:textStyle="bold"
            android:layout_marginRight="@dimen/table_marginRight"/>

        <TextView
            android:id="@+id/event3_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_column="1"
            android:textStyle="bold"
            android:layout_marginRight="@dimen/table_marginRight"/>

        <TextView
            android:id="@+id/event3_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_column="2"
            android:textStyle="bold"
            android:layout_marginRight="@dimen/table_marginRight"/>

    </TableRow>

</TableLayout>
